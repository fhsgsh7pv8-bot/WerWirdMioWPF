<Page x:Class="WerWirdMioWPF.View.PlayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WerWirdMioWPF.View"  
      xmlns:viewmodel="clr-namespace:WerWirdMioWPF.ViewModel" 
      d:DataContext="{d:DesignInstance Type=viewmodel:PlayPageViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="920"
      Title="PlayPage">

    <Grid>
        <Button Content="Schnelles Spiel" 
                Command="{Binding QuestionsPageCommand}" 
                Margin="0,177,270,0" Height="40" VerticalAlignment="Top" HorizontalAlignment="Right" Width="380" />

        <Label HorizontalContentAlignment="Center" Content="Willkommen" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,68,0,0" VerticalAlignment="Top" Width="204" RenderTransformOrigin="0.493,0.578"/>

        <Label HorizontalContentAlignment="Center" FontSize="25" Content="{Binding UserName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" HorizontalAlignment="Center" Margin="0,118,0,0" VerticalAlignment="Top" Height="44" Width="156"/>
        <Button Content="Benutzer wechseln" Margin="10,0,0,10" Command="{Binding ChangeUserCommand}" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="118" />

    </Grid>
</Page>